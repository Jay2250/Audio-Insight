# interface.kv

<LectureApp>:
    canvas.before:
        Color:
            rgba: 0.2, 0.6, 0.8, 1  # Background color
        Rectangle:
            pos: self.pos
            size: self.size

    orientation: 'vertical'
    padding: 20
    spacing: 20

    Label:
        text: 'Voice Lecture Analysis'
        font_size: 28
        color: (1, 1, 1, 1)  # White text
        size_hint_y: None
        height: 50
        halign: 'center'
        valign: 'middle'
        text_size: self.size

    Button:
        text: 'Start Recording'
        on_press: root.start_recording()
        size_hint_y: None
        height: 50
        background_color: (0.1, 0.8, 0.1, 1)  # Green button
        color: (1, 1, 1, 1)  # White text
        border_radius: [10, 10, 10, 10]  # Rounded corners

    Button:
        text: 'Stop Recording'
        on_press: root.stop_recording()
        size_hint_y: None
        height: 50
        background_color: (0.8, 0.1, 0.1, 1)  # Red button
        color: (1, 1, 1, 1)  # White text
        border_radius: [10, 10, 10, 10]  # Rounded corners

    Button:
        text: 'Exit'
        on_press: app.stop()
        size_hint_y: None
        height: 50
        background_color: (0.1, 0.1, 0.8, 1)  # Blue button
        color: (1, 1, 1, 1)  # White text
        border_radius: [10, 10, 10, 10]  # Rounded corners

    Label:
        text: 'Press "Start Recording" to capture the lecture, then "Stop Recording" to analyze.'
        color: (1, 1, 1, 1)  # White text
        size_hint_y: None
        height: 40
        halign: 'center'
        valign: 'middle'
        text_size: self.size
