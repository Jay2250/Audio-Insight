# interface.kv

<LectureApp>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1  # Background color
        Rectangle:
            pos: self.pos
            size: self.size

    orientation: 'vertical'
    padding: 20
    spacing: 20

    Label:
        text: 'Voice Lecture Analysis'
        font_size: 28
        color: (1, 1, 1, 1)  # White text
        size_hint_y: None
        height: 50
        halign: 'center'
        valign: 'middle'
        text_size: self.size

    Button:
        text: 'Select Audio File'
        on_press: root.open_file_chooser()
        size_hint_y: None
        height: 50
        background_color: (0.1, 0.8, 0.1, 1) 
        color: (1, 1, 1, 1)  # White text
        border_radius: [10, 10, 10, 10] 

    Button:
        text: 'Process File'
        on_press: root.process_audio_file()
        size_hint_y: None
        height: 50
        background_color: (0.8, 0.1, 0.1, 1)  
        color: (1, 1, 1, 1)  # White text
        border_radius: [10, 10, 10, 10]  

    Button:
        text: 'Show Word Frequency'
        on_press: root.show_word_frequency()
        size_hint_y: None
        height: 50
        background_color: (0.5, 0.5, 0.5, 1)  # Gray button
        color: (1, 1, 1, 1)  # White text
        border_radius: [10, 10, 10, 10]  # Rounded corners

    Button:
        text: 'Show Summary'
        on_press: root.show_summary()
        size_hint_y: None
        height: 50

    Button:
        text: 'Show Key Points'
        on_press: root.show_key_points()
        size_hint_y: None
        height: 50

    Button:
        text: 'Show Wordcloud'
        on_press: root.show_wordcloud()
        size_hint_y: None
        height: 50

    Button:
        text: 'Exit'
        on_press: app.stop()
        size_hint_y: None
        height: 50
        background_color: (0.1, 0.1, 0.8, 1)  # Blue button
        color: (1, 1, 1, 1)  # White text
        border_radius: [10, 10, 10, 10]  # Rounded corners

    Label:
        text: 'Press "Start Recording" to capture the lecture, then "Stop Recording" to analyze.'
        color: (1, 1, 1, 1)  # White text
        size_hint_y: None
        height: 40
        halign: 'center'
        valign: 'middle'
        text_size: self.size
